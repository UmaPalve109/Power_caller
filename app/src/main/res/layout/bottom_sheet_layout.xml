<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView android:id="@+id/simpleTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textColor="@color/black"
        android:textFontWeight="400"
        android:text="Add call number to Block" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtFldPhoneNumber"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintTop_toBottomOf="@id/simpleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="16dp"
        android:hint="Enter phone number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTxtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAddBlk"
        app:layout_constraintTop_toBottomOf="@id/txtFldPhoneNumber"
       android:background="@drawable/bg_capsule_shape"
        android:backgroundTint="@color/purple_200"
        android:height="40dp"
        android:width="250dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:cornerRadius="18dp"
        android:text="Block"
        android:textColor="#000"
        />
</androidx.constraintlayout.widget.ConstraintLayout>